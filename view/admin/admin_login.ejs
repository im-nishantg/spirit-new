<%- include ('../partials/header.ejs') %>
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <!-- navbar -->
    </head>

    <body>
        <div class="login_form">
            <% var messages %>
            <% if(messages!='undefined'){%>
                <h3 style="color: red;"> <%= messages %> </h3>
           <% } %>    
            <div class="head">Admin login ðŸ˜Ž</div>
            <div class="form">
                <form method="post">
                    <div class="form_elm">
                        <!-- <label for="email">Email Id</label> -->
                        <input type="email" name="email" id="email" placeholder="Enter Email">
                    </div>
                    <div class="form_elm">
                        <!-- <label for="password">password</label> -->
                        <input type="password" name="password" id="passwoed" placeholder="Enter passsword">
                    </div>
                    <div class="form_elm">
                        <button type="submit" class="btn_sb btn btn-sm btn-danger">Login</button>
                    </div>
                </form>
            </div>

        </div>
        <style>
            body{
                background: #141E30;
                /* fallback for old browsers */
                background: -webkit-linear-gradient(to right, #243B55, #141E30);
                /* Chrome 10-25, Safari 5.1-6 */
                background: linear-gradient(to right, #243B55, #141E30);
                /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            }
            .login_form {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 100%;
                height: 100vh;
                

                flex-direction: column;

            }

            .login_form .head {
                font-size: 30px;
                font-weight: bold;
                color: orange;
            }

            .login_form .form .form_elm {
                display: flex;
                color: white;
                margin: 5px;
                flex-direction: column;

            }

            .login_form .form .form_elm .btn_sb {
                box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;
            }

            .login_form .form .form_elm .btn_sb:hover {
                box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
            }

            .login_form .form .form_elm input {
                outline: none;
                background-color: #243B55;
                color: orange;
                border: none;
                box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
                border-radius: 5px;
            }
        </style>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/all.js"></script>
    </body>

    </html>