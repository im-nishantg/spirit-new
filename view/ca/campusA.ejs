    <div class="registration">
        <div class="reg_layer">
            <div class="main">
                <div class="form_content main_form">


                    <!-- <h4 class="intro_text">Register here</h4> -->

                    <div class="form" id="ca_r">
                        <div class="logo mt-3">
                            <img src="/image/logo_dark.png" alt="spirit'23">
                        </div>
                        <h5 class="mt-3 fw-bold"> Campus Ambassador</h5>
                        <h6 class="mt-2 mb-4 text-center">Become the face of Spirit in your College</h6>
                        <form method="post">
                            <div class="combined">
                                <div class="form_elm">
                                    <label for="name">First Name</label>
                                    <input type="text" id="name" name="name" 
                                        class="me-3" required="true">
                                </div>
                                <div class="form_elm">
                                    <label for="lname">Last Name</label>
                                    <input type="text" id="lname" name="lname"
                                        required="true">
                                </div>

                            </div>

                            <div class="form_elm">
                                <label for="email">Email id</label>
                                <input type="email" name="email" autocomplete="off" id="email"
                                    required>
                            </div>
                            <div class="form_elm">
                                <label for="whatsapp">Whatsapp number</label>
                                <input type="tel" name="whatsapp" 
                                    id="whatsapp" required>
                            </div>
                            <div class="form_elm">
                                <label for="phone">Contact number</label>
                                <input type="tel" name="phone" id="phone" required>
                            </div>
                            <div class="form_elm">
                                <label for="college">College name</label>
                                <input type="text" name="college" 
                                    id="college">
                            </div>
                            <div class="combined">
                                <!-- hh -->
                                <div class="form_elm">
                                    <label for="year">Year</label>
                                    <select name="year" id="year" class="me-3">
                                        <option selected>First</option>
                                        <!-- <option value="1">First</option> -->
                                        <option>Second</option>
                                        <option>Third</option>
                                        <option>Fourth</option>
                                        <option>Fifth</option>
                                        <option>M.Tech</option>
                                        <option>Ph.d</option>
                                        <option>Passout (or other)</option>
                                    </select>
                                </div>
                                <div class="form_elm">
                                    <label for="gender">Gender</label>
                                    <select name="gender" id="gender">
                                        <option selected>Male</option>
                                        <!-- <option value="Male">Male</option> -->
                                        <option>Female</option>
                                    </select>
                                </div>


                            </div>

                            <div class="combined">
                                <div class="form_elm">
                                    <label for="address">Postal Address</label>
                                    <input type="text" id="address" 
                                        name="address" class="me-3" required="true">
                                </div>
                                <div class="form_elm">
                                    <label for="code">Pin Code</label>
                                    <input id="code" name="code" required="true" >
                                </div>

                            </div>

                            <div class="form_elm">
                                <label for="question">Why should we choose you*?</label>
                                <!-- <i class="fa-solid fa-eye" id="togglePassword"></i> -->
                                <input type="text" name="question" id="question" required>

                            </div>
                            <div class="form_elm">
                                <label for="password" autocomplete="current-password">Password</label>
                                <!-- <i class="fa-solid fa-eye" id="togglePassword"></i> -->
                                <input type="password" name="password" id="password" minlength="8" required>

                            </div>
                            <div class="form_elm">
                                <label for="cpassword" autocomplete="current-password">Confirm password</label>
                                <!-- <i class="fa-solid fa-eye" id="togglePassword"></i> -->
                                <input type="password" name="cpassword" id="cpassword" minlength="8" required>

                            </div>

                            <div class="form_elm">
                                <button type="submit" id="submit">Create account</button>
                                <!-- <h6 class="bottom-text mt-3">Already registered? <a href="/login" class="bottom-text mt-3">Click here</a> to login.</h6> -->
                            </div>
                            <h6 class="bottom-text mt-3">Already registered? <a href="/ca_login"
                                class="bottom-text mt-3">Click here</a> to log in.</h6>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const pass_match = document.getElementById("password")
            , confirm_password = document.getElementById("cpassword");

        function validatePassword() {
            if (pass_match.value != confirm_password.value) {
                confirm_password.setCustomValidity("Passwords Don't Match");
            } else {
                confirm_password.setCustomValidity('');
            }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;

    </script>

